<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:textColor="@color/colorBlueDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:id="@+id/response"
        android:textSize="32sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:textColor="@color/colorTextLight"
        android:visibility="invisible"
        android:layout_toRightOf="@id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_alignBaseline="@id/response"
        android:id="@+id/responseDetails" />

    <TextView
        android:text="TextView"
        android:textColor="@color/colorTextLight"
        android:visibility="invisible"
        android:layout_below="@id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/firstElement" />

    <TextView
        android:text="TextView"
        android:textColor="@color/colorTextLight"
        android:visibility="invisible"
        android:layout_below="@id/firstElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/secondElement" />

    <TextView
        android:text="TextView"
        android:textColor="@color/colorTextLight"
        android:visibility="invisible"
        android:layout_below="@id/secondElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/thirdElement" />
</RelativeLayout>